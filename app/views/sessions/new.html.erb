

  <div class="container text-center mt-5">
    <h1>Connexion</h1>
    <div class="m-5">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

        <%= label_tag 'Email' %> 
        <%= text_field_tag 'email' %>
        <br /> <br /> 

        <%= label_tag 'Mot de passe' %> 
        <%= text_field_tag 'password' %>
        <br /> <br />

        <%= submit_tag "Je me connecte" %> 
      <% end %>
  </div>
